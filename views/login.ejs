<html>
    <head>
        <title>Shopping List</title>
        <link href="https://fonts.googleapis.com/css?family=Work+Sans:300,400,700&display=swap" rel="stylesheet">
    </head>

    <body>

    <script>
        function openPage(url) {
            window.location.href = url;
        }

    </script>

    <% include partials/logindesign.ejs%>

    <div id="backgroundImage"></div>
    <div id="loginBox">
        <div id="secondBox">
            <h1>Login</h1>
            <form method="post" action="/login">
                <p id="message" style="color: <%= color%>"><%= message%></p>
                <p class="formDescription">Username</p>
                <input type="text" name="username" id="loginInput"> <br />

                <p class="formDescription">Password</p>
                <input type="password" name="password" id="loginInput"> <br />

                <input type="submit" value="Login" id="loginButton">

            </form>
            <p id="description" onmousedown="openPage('/register')">Du hast noch keinen Account: Registrieren</p>
        </div>
    </div>



    </body>
</html>